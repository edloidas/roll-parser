{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "bin/**/*",
    "src/**/*",
    "test/**/*"
  ],
}

